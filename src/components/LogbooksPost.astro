---
const { url, title, tags, date, thumbnailUrl, alt } = Astro.props;
---

<hr class=blog-post-hr>
<div class="blog-post logbooks">
    <a href={url}>
        {thumbnailUrl ?
            <img class="logbooks-thumbnail" src={thumbnailUrl} alt={alt} />
        :
            <div class="logbooks-thumbnail-placeholder"></div>
        }
        <div class="blog-post-title-frontmatter">
            <p class="blog-post-title">{title}</p>
            <div class="blog-post-frontmatter">
                {tags &&
                    <div class="tag-container">
                        {tags.map((tag) => <div class="tag">{tag}</div> )}
                    </div>
                }
                <p class="frontmatter" class="blog-post">{date}</p>
            </div>
        </div>
    </a>
</div>