---
import GlobalGraphContainer from "./GlobalGraphContainer"
---

<button onclick="window.location.href = '/?openModal=globalGraph'">
    <img class='logo' src='/logo.svg' alt='logo icon'>
</button>

<dialog id=globalGraph class=globalGraph>
    <main class="graph-container" slot="main">
        <GlobalGraphContainer client:only />
    </main>
    <form method="dialog">
        <button
            class="close-button"
            type="button"
            onclick="window.closeModalAndGoBack('globalGraph')"
        >
            Close
        </button>
    </form>
</dialog>

<script>
    import "../scripts/graphModal.js";
</script>