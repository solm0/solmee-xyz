---
import { loadNotes } from "../scripts/loadNotes";
import TagButton from "./TagButton.astro";

const allPosts = loadNotes();
const tags = [...new Set(allPosts.map((post) => post.tags).flat())];
---

<div class="tag-button-container">
    {tags.map((tag) => (
        <TagButton tag={tag} />
    ))}
</div>