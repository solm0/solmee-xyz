---
import BaseLayout from "./BaseLayout.astro";

const {frontmatter} = Astro.props;
---

<BaseLayout pageTitle = {frontmatter.title}>
    <div class="frontmatter-container">
        <div class="tag-container">
            {frontmatter.tags.map((tag) => 
                 <div className={`tag ${tag === 'error' ? 'error' : ''}`}>{tag}</div>
            )}
        </div>
        <p class="frontmatter">year: {frontmatter.date}</p>
        <p class="description">{frontmatter.description}</p>
    </div>
    <hr>
    <div class="works-container">
        <slot />
    </div>
</BaseLayout>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Check if this page uses WorksLayout
        const isWorksLayout = document.querySelector('[data-astro-source-file$="WorksLayout.astro"]');
        if (isWorksLayout) {
            console.log('WorksLayout detected via data-astro-source-file.');

            // Your logic specific to WorksLayout
            const gridItemRight = document.querySelector('div#gridItemRight aside');
            if (gridItemRight) {
                gridItemRight.style.position = 'relative';
                console.log('Applied relative style to gridItemRight.');
            }
        } else {
            console.log('WorksLayout not detected. Skipping script execution.');
        }
    });
</script>