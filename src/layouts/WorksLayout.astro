---
import BaseLayout from "./BaseLayout.astro";
import NoteTagButton from "../components/NoteTagButton";
import LocalGraphContainer from "../components/LocalGraphContainer.astro";

const {frontmatter} = Astro.props;

---
<BaseLayout pageTitle = {frontmatter.title}>
    <div class="frontmatter-container">
        <div class="tag-button-container">{frontmatter.tags.map((tag) => <NoteTagButton client:only tag={tag}/>)}</div>
        <p class="frontmatter">year: {frontmatter.date}</p>
        <p class="description">{frontmatter.description}</p>
    </div>
    <slot />
    <LocalGraphContainer />
</BaseLayout>